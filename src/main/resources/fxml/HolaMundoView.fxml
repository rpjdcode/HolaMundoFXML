<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="view" alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="320.0" spacing="5.0" stylesheets="@../css/holamundo.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="nombreText" promptText="Introduce un nombre" />
      <HBox spacing="5.0">
         <children>
            <Button fx:id="saludarButton" defaultButton="true" mnemonicParsing="false" onAction="#onSaludarAction" styleClass="label" text="Saludar" />
            <Button fx:id="despedirButton" defaultButton="true" mnemonicParsing="false" onAction="#onDespedirAction" text="Despedir" />
         </children>
      </HBox>
      <Label fx:id="saludoLabel" text="Label" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
